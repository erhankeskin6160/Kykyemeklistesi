@model RegisterModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="tr">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Kayıt Ol</title>
    <link rel="stylesheet" href="/css/fontawesome.css">
    <link rel="stylesheet" href="/css/bootstrap.css">
    <link rel="stylesheet" href="/css/styles.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #FFF8E7;
            margin: 0;
            padding: 0;
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
        }

        h2 {
            text-align: center;
            margin-bottom: 20px;
        }

        .input-group {
            margin-bottom: 15px;
        }

        label {
            display: block;
            margin-bottom: 5px;
            font-weight: bold;
        }

        input {
            width: 100%;
            padding: 10px;
            border: 1px solid #ccc;
            border-radius: 4px;
            font-size: 14px;
        }

        button {
            width: 100%;
            padding: 12px;
            background-color: #64B5F6;
            border: none;
            border-radius: 4px;
            color: white;
            font-size: 16px;
            cursor: pointer;
        }

            button:hover {
                background-color: #45a049;
            }

        p {
            text-align: center;
            margin-top: 20px;
        }

        a {
            color: #4CAF50;
            text-decoration: none;
        }

        .input-group-text {
            display: flex;
            align-items: center;
            justify-content: center;
            background-color: #f0f0f0;
            border: 1px solid #ccc;
            height: 37.6px;
        }

        .form-control {
            border-radius: 0 4px 4px 0;
        }

        .input-group {
            display: flex;
            align-items: center;
        }
    </style>

    <script src="https://www.google.com/recaptcha/enterprise.js?render=6LfERd8rAAAAABstD0DBkpcm528Ki1UrDbE89o7m"></script>

</head>

<body>
    <div class="container">
        <h1 class="text-dark text-center mb-4">Kayıt Ol</h1>
        <form asp-action="Register" asp-controller="User" method="POST" id="registerForm">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

            <div class="form-group">
                <label for="email" class="form-label">E-posta Adresi</label>
                <div class="input-group">
                    <span class="input-group-text">
                        <i class="fa-solid fa-envelope"></i>
                    </span>
                    <input type="email" id="email" asp-for="Email" class="form-control" required
                           placeholder="E-posta adresinizi girin">
                </div>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label for="password" class="form-label">Şifre</label>
                <div class="input-group">
                    <span class="input-group-text">
                        <i class="fa-solid fa-lock img-fluid"></i>
                    </span>
                    <input type="password" id="password" asp-for="Password" class="form-control" required
                           placeholder="Şifrenizi girin">
                </div>
            </div>

            <div class="form-group">
                <label for="confirmPassword" class="form-label">Şifre Tekrar</label>
                <div class="input-group">
                    <span class="input-group-text">
                        <i class="fa-solid fa-lock img-fluid"></i>
                    </span>
                    <input type="password" id="confirmPassword" asp-for="ConfirmPassword" class="form-control" required
                           placeholder="Şifrenizi tekrar girin">
                </div>
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label for="city" class="form-label">Üniversiteyi Okuduğun Şehir</label>
                <div class="input-group">
                    <span class="input-group-text">
                        <i class="fa-solid fa-building-columns"></i>
                    </span>
                    <input type="text" id="city" class="form-control" asp-for="City" required placeholder="Şehri Gir">
                </div>
                <span asp-validation-for="City" class="text-danger"></span>
            </div>

            <!-- reCAPTCHA -->
            <div class="form-group">
                <div class="g-recaptcha" data-sitekey="6LfERd8rAAAAABstD0DBkpcm528Ki1UrDbE89o7m"></div>
                <input type="hidden" asp-for="RecaptchaToken" id="recaptchaToken" />
                <span asp-validation-for="RecaptchaToken" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-secondary w-100">Kayıt Ol</button>
        </form>

        <p>Hesabın var ise hesabına giriş yap <a href="/Login">Giriş Yap</a></p>
        <div class="d-flex justify-content-center my-3">
            <a href="@Url.Action("Index", "Home")" class="btn btn-info text-light text-decoration-none btn-lg px-4 py-2">
                Ana Sayfa
            </a>
        </div>
    </div>

    <!-- jQuery (reCAPTCHA için gerekli) -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <script>
        $(document).ready(function() {
            $('#registerForm').on('submit', function(e) {
                var recaptchaResponse = grecaptcha.getResponse();
                $('#recaptchaToken').val(recaptchaResponse);

                // reCAPTCHA doğrulaması yapılmamışsa formu gönderme
                if (recaptchaResponse.length === 0) {
                    e.preventDefault();
                    alert('Lütfen reCAPTCHA doğrulamasını tamamlayın!');
                    return false;
                }
            });
        });
    </script>
</body>
</html>