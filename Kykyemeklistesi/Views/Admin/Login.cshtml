@{
    ViewData["Title"] = "Admin Giriş";
}
@model Admin

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-header text-center bg-primary text-white">
                    <h4>Admin Giriş</h4>
                </div>
                <div class="card-body">
                    <!-- Hata Mesajı -->
                    @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
                    {
                        <div class="alert alert-danger" role="alert">
                            @ViewBag.ErrorMessage
                        </div>
                    }

                    <!-- Giriş Formu -->
                    <form asp-action="Login" asp-controller="Admin" method="post">
                        <div class="form-group mb-3">
                            <input type="hidden" asp-for="Id" />
                            <label for="AdminName">Kullanıcı Adı</label>
                            <input type="text" id="AdminName" asp-for=AdminName class="form-control" placeholder="Kullanıcı Adı" required>
                        </div>
                        <div class="form-group mb-3">
                            <label for="password">Şifre</label>
                            <input type="password" id="password" asp-for="AdminPassword" class="form-control" placeholder="Şifre" required>
                        </div>
                        <button type="submit" class="btn btn-primary w-100">Giriş Yap</button>
                    </form>
                </div>
            </div>
            <div class="text-center mt-3">
                <a href="/" class="text-muted">Ana Sayfaya Dön</a>
            </div>
        </div>
    </div>
</div>
