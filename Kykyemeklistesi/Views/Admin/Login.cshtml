@model Admin

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/fontawesome.css">
    <link rel="stylesheet" href="/css/bootstrap.css">
    <link rel="stylesheet" href="/css/styles.css">
    <link href="/css/styles.css" rel="stylesheet" />
</head>

<body>
    @{
        ViewData["Title"] = "Admin Giriş";
    }

    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-6">
                <h1 class="h-100 w-100 bg-info text-light align-items-center d-flex justify-content-center rounded-2">
                    Admin
                    Paneli</h1>
            </div>
            <div class="col-6">
                <div class="card">

                    <div class="card-body fw-light">
                        <!-- Hata Mesajı -->
                        @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
                        {
                            <div class="alert alert-danger" role="alert">
                                @ViewBag.ErrorMessage
                            </div>
                        }

                        <!-- Giriş Formu -->
                        <form asp-action="Login" asp-controller="Admin" method="post">
                            <div class="form-group mb-3">
                                <input type="hidden" asp-for="Id" />
                                <label for="AdminName">Kullanıcı Adı</label>
                                <input type="text" id="AdminName" asp-for=AdminName class="form-control"
                                    placeholder="Kullanıcı Adı" required>
                            </div>
                            <div class="form-group mb-3">
                                <label for="password">Şifre</label>
                                <input type="password" id="password" asp-for="AdminPassword" class="form-control"
                                    placeholder="Şifre" required>
                            </div>
                            <button type="submit" class="btn btn-outline-info w-100">Giriş Yap</button>
                        </form>
                    </div>
                </div>

            </div>
        </div>
    </div>

</body>

</html>
